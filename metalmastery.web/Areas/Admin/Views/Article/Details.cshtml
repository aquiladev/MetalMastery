@using MetalMastery.Web.App_LocalResources
@model MetalMastery.Web.Areas.Admin.Models.ArticleModel
@{
    ViewBag.Title = MmResources.Details;
}
<fieldset>
    <div class="display-label">@MmResources.Title</div>
    <div class="display-field">@Model.Title</div>

    <div class="display-label">@MmResources.Text</div>
    <div class="display-field">@Model.Text</div>

    <div class="display-label">@MmResources.CreateDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.CreateDate)</div>

    <div class="display-label">@MmResources.Owner</div>
    @if (Model.Owner != null)
    {
        <div class="display-field">@Html.DisplayTextFor(_ => Model.Owner.Email).ToString()</div>
    }
</fieldset>
<p>
    @Html.ActionLink(MmResources.Edit, "Edit", new { id = Model.Id }) |
    @Html.ActionLink(MmResources.BackToList, "Index")
</p>
