@using MetalMastery.Admin.App_LocalResources
@model MetalMastery.Admin.Models.ArticleModel
@{
    ViewBag.Title = MmAdminResources.Delete;
}
<h3>@MmAdminResources.DeleteConfirmQuestion</h3>
<fieldset>
    <div class="display-label">@MmAdminResources.Title</div>
    <div class="display-field">@Model.Title</div>

    <div class="display-label">@MmAdminResources.Text</div>
    <div class="display-field">@Model.Text</div>
    
    <div class="display-label">@MmAdminResources.CreateDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.CreateDate)</div>
    
    <div class="display-label">@MmAdminResources.Owner</div>
    @if (Model.Owner != null)
    {
        <div class="display-field">@Html.DisplayTextFor(_ => Model.Owner.Email).ToString()</div>
    }
</fieldset>
@using (Html.BeginForm())
{
    <p>
        <input type="submit" value="@MmAdminResources.Delete" />
        |
        @Html.ActionLink(MmAdminResources.BackToList, "Index")
    </p>
}
